pipeline {
    agent any

    stages {
        stage('clonar o repositorio') {
            steps {
                git 'https://github.com/Estevaoclaudino/teste-ebac-ui.git'
            }
        }
        stage('instalar dependencias') {
            steps {
                bat 'npm install'
            }
        }
        stage('executar testes') {
            steps {
                bat '''set NO_COLOR=1
npm run cypress:run'''
            }
        }
    }
}
